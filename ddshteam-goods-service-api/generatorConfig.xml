			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- targetProject:mapper映射文件生成的位置 -->
		<sqlMapGenerator targetPackage="mapper"
			targetProject="ddshteam-goods-service\src\main\resources">
			<!-- enableSubPackages:是否让schema作为包的后缀 -->
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>
		<!-- targetPackage：mapper接口生成的位置 -->
		<javaClientGenerator targetPackage="com.ddsh.goods.service.dao"
			targetProject="ddshteam-goods-service\src\main\java" type="XMLMAPPER">
			<!-- enableSubPackages:是否让schema作为包的后缀 -->
			<property name="enableSubPackages" value="false" />
		</javaClientGenerator>

		<!-- 指定数据库表 -->
		<table schema="stock" tableName="goods_brand_info"
			enableDeleteByPrimaryKey="true" enableInsert="true"
			enableUpdateByPrimaryKey="true" enableSelectByPrimaryKey="true"
			enableCountByExample="true" enableUpdateByExample="true"
